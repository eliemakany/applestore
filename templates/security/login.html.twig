{% extends 'layouts/base.html.twig' %}

{% block title 'Se connecter' %}

{% block body %}
<div class="row">
    <div class="col-md-6 mx-auto">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}

            <h1 class="mt-5 mb-3 text-center">Connectez-vous</h1>
            <p class="mb-3 text-center text-muted">Pour administrer votre store</p>

            <div class="form-group">
                <label for="email">E-mail</label>
                <input type="email" value="{{ last_username }}" name="email" id="email" class="form-control" required autofocus>
            </div>

            <div class="form-group">
                <label for="password">Mot de passe</label>
                <input type="password" name="password" id="password" class="form-control" required>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <div class="d-flex justify-content-between">
                <div class="form-group">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="_remember_me" value="" id="remember_me">
                        <label class="form-check-label" for="remember_me">
                            Garder ma connexion active
                        </label>
                    </div>
                </div>

                <a href="#"> Mot de passe oubli√© ?</a>
            </div>

            <button class="btn btn-lg btn-primary btn-block" type="submit">
                Connexion
            </button>
        </form>
    </div>
</div>
{% endblock %}
